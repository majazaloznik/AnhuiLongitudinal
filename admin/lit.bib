journal = {Aging {\&} Mental Health},
number = {1},
pages = {108--112},
title = {{Correlation between loneliness and social relationship among empty nest elderly in Anhui rural area, China}},
url = {http://dx.doi.org/10.1080/13607860903228796},
volume = {14},
year = {2010}
